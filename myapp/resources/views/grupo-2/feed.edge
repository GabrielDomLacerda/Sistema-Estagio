            <option value="Nova Iguaçu"></option>
            <option value="São João de Meriti"></option>
            <option value="Duque de Caxias"></option>
            <option value="Centro"></option>
            <option value="Barueri"></option>
            <option value="Osasco"></option>
        </datalist>
        <input type="search" placeholder="Método de trabalho" list="metodos" class="fundo rounded-lg p-2 ml-2 my-0.5">
        <datalist id="metodos">
            <option value="Presencial"></option>
            <option value="Remoto"></option>
            <option value="Híbrido"></option>
        </datalist>
        <input type="search" placeholder="Qual tipo de vaga?" list="vaga" class="fundo rounded-lg p-2 ml-2 my-0.5">
