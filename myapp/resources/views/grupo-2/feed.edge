    <div
        class="container mx-auto flex justify-center items-center mt-14 p-4 bg-gray-800 rounded-lg ring ring-offset-2 ring-gray-600 flex flex-wrap">
        <input type="search" placeholder="Qual o seu Estado?" list="estados" class="fundo rounded-lg p-2 my-0.5">
        <datalist id="estados">
            <option value="Rio de Janeiro"></option>
            <option value="São Paulo"></option>
        </datalist>
